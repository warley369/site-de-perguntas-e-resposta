<%- include('./partials/header.ejs'); -%>
<body >
    <%- include('./partials/navbar.ejs'); -%>

   <div class="container">
      <hr>
      <h1><%= Pergunta.titulo %></h1>
      <p><%= Pergunta.descricao %></p>
      <hr>
      <form method="post" action="/responder">
        <h3>Responda</h3>
        <label >Resposta</label>
        <textarea name="corpo" placeholder="Digite sua resposta" class="form-control"></textarea><br>
        <input type="hidden" name="pergunta" value="<%= Pergunta.id %>" >
        <button type="submit" class=" btn btn-primary">Responder</button>
     </form>
     <hr>
     <h3>Repostas</h3>
     <hr>
     <% respostas.forEach(respostas => {%>
      <br>
        <div class="card">
          <div class="card-body">
            <%= respostas.corpo %>
          </div>

        </div>
    

      <% }) %>
 </div>
</body>
<%- include('./partials/footer.ejs'); -%>